



#include <iostream>
using namespace std;


class Solution {
public:
    long long int factorial(int n) {
        if (n <= 1) {
            return 1;
        }
        return n * factorial(n - 1);
    }
};
int main() {
    Solution solution;
    int n;


    cout << "Enter a number to compute its factorial: ";
    cin >> n;


    cout << "Factorial of " << n << " is: " << solution.factorial(n) << endl;


    return 0;
}
